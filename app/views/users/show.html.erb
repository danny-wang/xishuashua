<%provide(:title,@user.name)%>
<div class="row">
<aside class="col-md-4"  style="width:20%">
<section class="user_info">
<h1>
<%=gravatar_for@user%>
<%=@user.name%>
</h1>
</section>
</aside>
<%orders=Order.where(:email =>@user.email).all%>

<h1 style="text-align:left;margin:30px 0 30px 200px;font-size:2em">Historial Order</h1>

<table class="orderlist">
<% orders.each do |order| %>
  
   <tr class="<%= cycle('list_line_odd', 'list_line_even') %>"> <td>收件人：</td><td><%= order.name %></td>  </tr>
        <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">  <td>收件人地址：</td><td><%= order.address %></td></tr>
        <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">  <td>邮箱：</td><td><%= order.email %></td></tr>
        <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">  <td>支付类型：</td><td><%= order.pay_type %></td></tr>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">   <td >操作</td><td><%= link_to '查看', order %>  |  <%= link_to '删除', order, method: :delete, data: { confirm: 'Are you sure?' } %></td></tr>
<% end %>
</table>


</div>
